{
  "designSystem": {
    "name": "RestaurantReviews",
    "platform": "ReactNative",
    "framework": "Expo",
    "version": "1.0.0"
  },
  "colors": {
    "primary": {
      "main": "#6366F1",
      "light": "#818CF8",
      "dark": "#4F46E5",
      "surface": "#F8FAFC"
    },
    "secondary": {
      "orange": "#FF6B35",
      "red": "#EF4444",
      "green": "#10B981"
    },
    "neutral": {
      "white": "#FFFFFF",
      "gray50": "#F9FAFB",
      "gray100": "#F3F4F6",
      "gray200": "#E5E7EB",
      "gray300": "#D1D5DB",
      "gray400": "#9CA3AF",
      "gray500": "#6B7280",
      "gray600": "#4B5563",
      "gray700": "#374151",
      "gray800": "#1F2937",
      "gray900": "#111827"
    },
    "status": {
      "success": "#10B981",
      "warning": "#F59E0B",
      "error": "#EF4444",
      "info": "#3B82F6"
    }
  },
  "typography": {
    "fontFamily": {
      "primary": "System",
      "fallback": "SF Pro Display, -apple-system, BlinkMacSystemFont, Segoe UI, Roboto"
    },
    "fontSize": {
      "xs": 12,
      "sm": 14,
      "base": 16,
      "lg": 18,
      "xl": 20,
      "2xl": 24,
      "3xl": 30,
      "4xl": 36
    },
    "fontWeight": {
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700"
    },
    "lineHeight": {
      "tight": 1.2,
      "normal": 1.4,
      "relaxed": 1.6
    }
  },
  "spacing": {
    "xs": 4,
    "sm": 8,
    "md": 12,
    "lg": 16,
    "xl": 20,
    "2xl": 24,
    "3xl": 32,
    "4xl": 40,
    "5xl": 48,
    "6xl": 64
  },
  "borderRadius": {
    "none": 0,
    "sm": 4,
    "md": 8,
    "lg": 12,
    "xl": 16,
    "2xl": 20,
    "3xl": 24,
    "full": 9999
  },
  "shadows": {
    "sm": {
      "shadowColor": "#000",
      "shadowOffset": { "width": 0, "height": 1 },
      "shadowOpacity": 0.05,
      "shadowRadius": 2,
      "elevation": 1
    },
    "md": {
      "shadowColor": "#000",
      "shadowOffset": { "width": 0, "height": 2 },
      "shadowOpacity": 0.1,
      "shadowRadius": 4,
      "elevation": 3
    },
    "lg": {
      "shadowColor": "#000",
      "shadowOffset": { "width": 0, "height": 4 },
      "shadowOpacity": 0.15,
      "shadowRadius": 8,
      "elevation": 5
    }
  },
  "components": {
    "StatusBar": {
      "style": "dark-content",
      "backgroundColor": "transparent"
    },
    "Header": {
      "height": 88,
      "paddingHorizontal": 16,
      "paddingTop": 44,
      "backgroundColor": "transparent",
      "position": "absolute",
      "zIndex": 10
    },
    "SearchBar": {
      "height": 44,
      "borderRadius": 12,
      "backgroundColor": "#FFFFFF",
      "paddingHorizontal": 16,
      "fontSize": 16,
      "shadowColor": "#000",
      "shadowOffset": { "width": 0, "height": 2 },
      "shadowOpacity": 0.1,
      "shadowRadius": 4,
      "elevation": 3,
      "marginHorizontal": 16,
      "marginBottom": 16
    },
    "FilterTabs": {
      "height": 40,
      "marginHorizontal": 16,
      "marginBottom": 16,
      "tab": {
        "paddingHorizontal": 16,
        "paddingVertical": 8,
        "marginRight": 12,
        "borderRadius": 20,
        "backgroundColor": "#F3F4F6",
        "active": {
          "backgroundColor": "#6366F1",
          "color": "#FFFFFF"
        },
        "inactive": {
          "backgroundColor": "#F3F4F6",
          "color": "#6B7280"
        }
      }
    },
    "MapView": {
      "flex": 1,
      "backgroundColor": "#F9FAFB",
      "mapStyle": "light"
    },
    "MapMarker": {
      "restaurant": {
        "size": 40,
        "backgroundColor": "#6366F1",
        "borderRadius": 20,
        "borderWidth": 3,
        "borderColor": "#FFFFFF",
        "centerIcon": {
          "size": 20,
          "color": "#FFFFFF"
        }
      },
      "user": {
        "size": 32,
        "backgroundColor": "#10B981",
        "borderRadius": 16,
        "borderWidth": 2,
        "borderColor": "#FFFFFF"
      }
    },
    "RestaurantCard": {
      "backgroundColor": "#FFFFFF",
      "borderRadius": 16,
      "marginHorizontal": 16,
      "marginBottom": 16,
      "shadowColor": "#000",
      "shadowOffset": { "width": 0, "height": 2 },
      "shadowOpacity": 0.1,
      "shadowRadius": 8,
      "elevation": 4,
      "overflow": "hidden",
      "image": {
        "height": 160,
        "width": "100%",
        "borderTopLeftRadius": 16,
        "borderTopRightRadius": 16
      },
      "content": {
        "padding": 16
      },
      "badge": {
        "position": "absolute",
        "top": 12,
        "left": 12,
        "backgroundColor": "#10B981",
        "paddingHorizontal": 8,
        "paddingVertical": 4,
        "borderRadius": 6,
        "fontSize": 12,
        "fontWeight": "600",
        "color": "#FFFFFF"
      },
      "favoriteButton": {
        "position": "absolute",
        "top": 12,
        "right": 12,
        "width": 32,
        "height": 32,
        "borderRadius": 16,
        "backgroundColor": "#FFFFFF",
        "justifyContent": "center",
        "alignItems": "center",
        "shadowColor": "#000",
        "shadowOffset": { "width": 0, "height": 1 },
        "shadowOpacity": 0.1,
        "shadowRadius": 2,
        "elevation": 2
      }
    },
    "BottomNavigation": {
      "height": 80,
      "backgroundColor": "#FFFFFF",
      "paddingBottom": 20,
      "paddingTop": 12,
      "shadowColor": "#000",
      "shadowOffset": { "width": 0, "height": -2 },
      "shadowOpacity": 0.1,
      "shadowRadius": 8,
      "elevation": 8,
      "tab": {
        "flex": 1,
        "alignItems": "center",
        "justifyContent": "center",
        "active": {
          "color": "#6366F1"
        },
        "inactive": {
          "color": "#9CA3AF"
        }
      }
    },
    "FloatingActionButton": {
      "position": "absolute",
      "bottom": 100,
      "right": 16,
      "width": 56,
      "height": 56,
      "borderRadius": 28,
      "backgroundColor": "#6366F1",
      "justifyContent": "center",
      "alignItems": "center",
      "shadowColor": "#000",
      "shadowOffset": { "width": 0, "height": 4 },
      "shadowOpacity": 0.3,
      "shadowRadius": 8,
      "elevation": 8
    }
  },
  "layout": {
    "screen": {
      "flex": 1,
      "backgroundColor": "#F9FAFB"
    },
    "container": {
      "flex": 1,
      "paddingHorizontal": 16
    },
    "safeArea": {
      "flex": 1,
      "backgroundColor": "#FFFFFF"
    }
  },
  "animations": {
    "duration": {
      "fast": 200,
      "normal": 300,
      "slow": 500
    },
    "easing": {
      "easeIn": "ease-in",
      "easeOut": "ease-out",
      "easeInOut": "ease-in-out"
    }
  },
  "patterns": {
    "screenStructure": [
      "StatusBar",
      "Header (with search and filters)",
      "MapView (with markers)",
      "RestaurantCard (bottom sheet style)",
      "BottomNavigation"
    ],
    "interactionPatterns": {
      "search": "Real-time search with debouncing",
      "mapInteraction": "Pan, zoom, marker tap",
      "cardInteraction": "Swipe up for details, heart tap for favorite",
      "navigation": "Tab-based navigation with active states"
    },
    "dataFlow": {
      "restaurants": "Array of restaurant objects with location, images, ratings",
      "userLocation": "Current user coordinates",
      "filters": "Active filter states (cuisine, price, etc.)",
      "favorites": "Array of favorited restaurant IDs"
    }
  },
  "accessibility": {
    "minimumTouchTarget": 44,
    "colorContrast": "WCAG AA compliant",
    "screenReader": "All interactive elements have accessibilityLabel",
    "focusManagement": "Logical tab order and focus indicators"
  },
  "responsive": {
    "breakpoints": {
      "small": 375,
      "medium": 414,
      "large": 768
    },
    "scalingFactor": 1.0
  }
}